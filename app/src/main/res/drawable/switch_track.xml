<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Checked State (ON) - Blue Gradient Background -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="100dp" />
            <gradient
                android:type="linear"
                android:angle="0"
                android:startColor="#4A9EFF"
                android:centerColor="#5FA8FF"
                android:endColor="#74B2FF" />
            <size
                android:width="48dp"
                android:height="28dp" />
        </shape>
    </item>

    <!-- Unchecked State (OFF) - Dark Gray Background -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="100dp" />
            <solid android:color="#334155" />
            <size
                android:width="48dp"
                android:height="28dp" />
        </shape>
    </item>
</selector>

