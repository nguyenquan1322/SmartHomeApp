<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/CardStyle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title and Mode Selector -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/lights_title"
                style="@style/TitleText" />

            <!-- Segmented Control -->
            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/toggleLightsMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleSelection="true"
                app:selectionRequired="true">

                <Button
                    android:id="@+id/btnLightsAuto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mode_auto"
                    style="@style/SegmentedButtonStyle" />

                <Button
                    android:id="@+id/btnLightsManual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mode_manual"
                    style="@style/SegmentedButtonStyle" />

            </com.google.android.material.button.MaterialButtonToggleGroup>
        </LinearLayout>

        <!-- Auto Mode Panel -->
        <LinearLayout
            android:id="@+id/lightsAutoPane"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/tvLightsAutoDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lights_auto_desc"
                style="@style/MutedText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lights_threshold_label"
                style="@style/MutedText"
                android:layout_marginTop="10dp"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="6dp">

                <com.google.android.material.slider.Slider
                    android:id="@+id/sliderLuxThreshold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:valueFrom="50"
                    android:valueTo="800"
                    android:stepSize="10"
                    android:value="300"
                    app:thumbColor="@color/accent"
                    app:trackColorActive="@color/accent"
                    app:trackColorInactive="@color/muted" />

                <TextView
                    android:id="@+id/tvLuxThreshold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="300"
                    android:textColor="@color/ink"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp"
                    android:minWidth="50dp"
                    android:gravity="end" />
            </LinearLayout>
        </LinearLayout>

        <!-- Manual Mode Panel -->
        <LinearLayout
            android:id="@+id/lightsManualPane"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            android:visibility="gone">

            <!-- Light 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/light_1"
                    android:textColor="@color/ink"
                    android:textSize="15sp" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchLight1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/CustomSwitchStyle" />
            </LinearLayout>

            <!-- Light 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/light_2"
                    android:textColor="@color/ink"
                    android:textSize="15sp" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchLight2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/CustomSwitchStyle" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>

