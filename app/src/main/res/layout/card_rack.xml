<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/CardStyle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title and Mode Selector -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/rack_title"
                style="@style/TitleText" />

            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/toggleRackMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleSelection="true"
                app:selectionRequired="true">

                <Button
                    android:id="@+id/btnRackAuto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mode_auto"
                    style="@style/SegmentedButtonStyle" />

                <Button
                    android:id="@+id/btnRackManual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mode_manual"
                    style="@style/SegmentedButtonStyle" />

            </com.google.android.material.button.MaterialButtonToggleGroup>
        </LinearLayout>

        <!-- Auto Mode Panel -->
        <TextView
            android:id="@+id/rackAutoPane"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rack_auto_desc"
            style="@style/MutedText"
            android:layout_marginTop="12dp" />

        <!-- Manual Mode Panel -->
        <LinearLayout
            android:id="@+id/rackManualPane"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:visibility="gone">

            <Button
                android:id="@+id/btnRackClose"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/btn_close"
                style="@style/ButtonStyle"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnRackOpen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/btn_open"
                style="@style/ButtonStyle"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rack_status_label"
                style="@style/MutedText" />

            <TextView
                android:id="@+id/tvRackStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rack_open"
                android:textColor="@color/ink"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginStart="4dp" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>

