<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    style="@style/CardStyle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gas_title"
            style="@style/TitleText"
            android:layout_marginBottom="12dp" />

        <!-- Gas Value Display -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gas_level_label"
                style="@style/MutedText" />

            <TextView
                android:id="@+id/tvGasValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/ink"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ppm"
                style="@style/MutedText"
                android:textSize="12sp"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <!-- Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gas_status_label"
                style="@style/MutedText" />

            <TextView
                android:id="@+id/tvGasStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gas_safe"
                android:textColor="@color/ink"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <!-- Warning Message (only visible when danger) -->
        <TextView
            android:id="@+id/tvGasWarning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/gas_warning"
            android:textColor="#FF6B6B"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:background="@drawable/bg_card"
            android:visibility="gone" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

